<body class="container">
    <div class="page-header">
        <h1>Test work</h1>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <form class="row">
                <div class="col-lg-9">
                    <input type="text" class="form-control" placeholder="Github user name">
                </div>
                <button type="submit" class="btn btn-default col-md-3 search-button">Search</button>
            </form>
