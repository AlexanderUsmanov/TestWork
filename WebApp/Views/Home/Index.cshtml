                        <td>
                            <div class="btn btn-default">Show stargazzers</div>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>hello-worId</td>
                        <td>13</td>
                        <td>
                            <div class="btn btn-default">Show stargazzers</div>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-lg-1"></div>
        <div class="col-lg-4">
            <div class="panel panel-primary stargezers-widget">
                <div class="panel-heading">Stargazers</div>

                <table class="table stargezers-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Login</th>
                        </tr>
                    </thead>
                    <tbody class="stargezers-table-body">
                        <tr>
                            <td>1</td>
                            <td>MySugar2011</td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>tofaelmax</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
